---
interface Props {
	title?: string;
}

const { title = "Astro E-Commerce" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="E-commerce demo built with Astro, React, Svelte, Vue, and TailwindCSS" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-background text-foreground antialiased">
		<slot />
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>
