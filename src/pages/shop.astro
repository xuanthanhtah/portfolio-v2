---
import Layout from '../layouts/Layout.astro';
import ShoppingCart from '../components/react/ShoppingCart';
import ProductCard from '../components/react/ProductCard';
import ProductFilter from '../components/svelte/ProductFilter.svelte';
import StatsBar from '../components/svelte/StatsBar.svelte';
import ProductReviews from '../components/vue/ProductReviews.vue';
import PromoBanner from '../components/vue/PromoBanner.vue';
import { products, reviews } from '../data/products';
---

<Layout title="E-Commerce Shop">
  <div class="min-h-screen bg-background">
    <!-- Header -->
    <header class="sticky top-0 z-50 bg-card/95 backdrop-blur-sm border-b border-border">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
            <a href="/" class="text-2xl font-bold text-primary">
              üõí ShopAstro
            </a>
            <nav class="hidden md:flex items-center gap-6">
              <a href="/shop" class="text-foreground hover:text-primary transition-colors font-medium">Shop</a>
              <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Categories</a>
              <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Deals</a>
              <a href="#" class="text-muted-foreground hover:text-primary transition-colors">About</a>
            </nav>
          </div>
          <div class="flex items-center gap-4">
            <ShoppingCart client:load />
          </div>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <!-- Hero Section with Vue Promo Banner -->
      <PromoBanner client:load />

      <!-- Stats Bar (Svelte) -->
      <StatsBar client:load />

      <!-- Filters Section (Svelte) -->
      <ProductFilter client:load />

      <!-- Products Grid -->
      <section class="mb-12">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold">Featured Products</h2>
          <p class="text-muted-foreground">
            Showing <span class="font-semibold text-foreground">{products.length}</span> products
          </p>
        </div>
        
        <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {products.map((product) => (
            <ProductCard product={product} client:load />
          ))}
        </div>
      </section>

      <!-- Divider -->
      <div class="border-t border-border my-12"></div>

      <!-- Reviews Section (Vue) -->
      <section class="max-w-3xl mx-auto">
        <ProductReviews 
          productId={1} 
          initialReviews={reviews.filter(r => r.productId === 1)} 
          client:load 
        />
      </section>

      <!-- Framework Showcase -->
      <section class="mt-16 p-8 bg-card rounded-lg border border-border">
        <h2 class="text-2xl font-bold text-center mb-8">Built with Multiple Frameworks</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="p-6 rounded-lg bg-blue-500/10 border border-blue-500/20">
            <div class="text-4xl mb-4">‚öõÔ∏è</div>
            <h3 class="font-semibold text-lg mb-2 text-blue-600">React</h3>
            <p class="text-sm text-muted-foreground">
              Product Cards, Shopping Cart with Dialog, Interactive UI components
            </p>
          </div>
          <div class="p-6 rounded-lg bg-orange-500/10 border border-orange-500/20">
            <div class="text-4xl mb-4">üî•</div>
            <h3 class="font-semibold text-lg mb-2 text-orange-600">Svelte</h3>
            <p class="text-sm text-muted-foreground">
              Product Filters, Search, Stats Dashboard with reactive state
            </p>
          </div>
          <div class="p-6 rounded-lg bg-green-500/10 border border-green-500/20">
            <div class="text-4xl mb-4">üíö</div>
            <h3 class="font-semibold text-lg mb-2 text-green-600">Vue</h3>
            <p class="text-sm text-muted-foreground">
              Product Reviews, Promo Banner with animations and transitions
            </p>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-card border-t border-border mt-16">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="font-bold text-lg mb-4">üõí ShopAstro</h3>
            <p class="text-muted-foreground text-sm">
              A demo e-commerce site built with Astro, React, Svelte, and Vue.
            </p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary transition-colors">Home</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Shop</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Categories</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Deals</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Support</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary transition-colors">FAQ</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Shipping</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Returns</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary transition-colors">Twitter</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Instagram</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">Facebook</a></li>
              <li><a href="#" class="hover:text-primary transition-colors">GitHub</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-border mt-8 pt-8 text-center text-sm text-muted-foreground">
          <p>¬© 2026 ShopAstro. Built with ‚ù§Ô∏è using Astro + React + Svelte + Vue + TailwindCSS</p>
        </div>
      </div>
    </footer>
  </div>
</Layout>
